<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="pane" prefHeight="550.0" prefWidth="600.0" styleClass="bodybg" stylesheets="@images/background.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.orleans.miage.vues.MenuApresConnexion">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="lancerPartie" alignment="CENTER" mnemonicParsing="false" prefHeight="39.0" prefWidth="213.0" style="-fx-background-color: green; -fx-text-fill: white;" text="Lancer une Partie">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="RejoindrePartie" mnemonicParsing="false" prefHeight="39.0" prefWidth="208.0" style="-fx-background-color: red; -fx-text-fill: white;" text="Rejoindre une Partie">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#retour" prefHeight="39.0" prefWidth="209.0" style="-fx-background-color: yellow; -fx-text-fill: white;" text="Retour">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>

            <Button mnemonicParsing="false" onAction="#quitter" prefHeight="39.0" prefWidth="208.0" style="-fx-background-color: orange; -fx-text-fill: white;" text="Quitter">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
